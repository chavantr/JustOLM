<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblPrescribeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="QQQQQQQQQQQQQ"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/lnrScheduler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="100">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/lblSchedule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="49.5"
                    android:text="Schedule : Weekly"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/lblPeriod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="49.5"
                    android:text="Period : 1"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrScheduler"
                android:orientation="horizontal"
                android:padding="4dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="Quantity :"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txtQty"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Qty"
                    android:inputType="number" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrQty"
                android:orientation="horizontal"
                android:padding="4dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/lblScheduler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="Scheduler : Scheduler"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


            </LinearLayout>


            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/delete_icon" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>